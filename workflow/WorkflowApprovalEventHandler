    {

        // TODO:  Write code to execute once the workflow is canceled.

        sss_db_CustomWorkflow_Table::updateWorkflowStatus(_workflowElementEventArgs.parmWorkflowContext().parmRecId(), sss_db_CustomWorkflow_BaseEnum::Rejected);

